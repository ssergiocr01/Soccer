@model IEnumerable<Soccer.Domain.League>

@{
    ViewBag.Title = "Ligas";
}

<link rel="stylesheet" href="~/Content/DataTables/datatables.min.css" />

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear Liga", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover table-responsive table-striped" id="MyTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.LeagueId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.LeagueId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.LeagueId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    <script src="~/Content/DataTables/datatables.min.js"></script>

    <script>
        $('#MyTable').DataTable({
            "responsive": true,
            "processing": true,
            "autoWidth": false,
            "dom": "lBfrtip",
            "scrollY": "450px",
            "scrollCollapse": true,
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ningún dato disponible en esta tabla",
                "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                },
                buttons: {
                    copyTitle: 'Copiado al Portapapeles ',
                    copySuccess: {
                        _: ' %d filas copiadas al portapapeles',
                        1: '1 fila copiada al portapapeles'
                    }
                }
            },
            'destroy': true
        });
    </script>
}
